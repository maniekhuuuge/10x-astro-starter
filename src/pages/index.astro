---
import MainLayout from '@/layouts/MainLayout.astro';
import { ClipboardCheck } from 'lucide-react';
---

<MainLayout title="Home">
  <section class="mb-12">
    <h1 class="text-4xl font-bold mb-4">Welcome to 10x Flashcards</h1>
    <p class="text-xl text-gray-500 mb-8">
      Boost your learning with AI-powered flashcards
    </p>
  </section>
  
  <section class="border rounded-lg p-6 bg-white shadow-sm border-blue-200 max-w-xl mx-auto">
    <h2 class="text-2xl font-semibold mb-4">AI Flashcards Ready for Review</h2>
    <p class="mb-6 text-gray-500">
      Review and approve AI-generated flashcards before adding them to your collection.
    </p>
    <a 
      href="/flashcards/review" 
      class="inline-flex items-center gap-2 px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors"
    >
      <ClipboardCheck className="h-5 w-5" />
      <span>Review AI Flashcards</span>
      <span class="inline-flex items-center justify-center bg-white text-blue-600 h-5 min-w-5 px-1 rounded-full text-xs font-semibold">
        3
      </span>
    </a>
  </section>
</MainLayout>
